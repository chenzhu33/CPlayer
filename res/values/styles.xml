    </style>

    <!-- Tips Apearance-->

    <style name="TipsFontStyle">
      <item name="android:textColor">@color/darkerorange</item>
      <item name="android:textStyle">bold</item>
    </style>

    <style name="TipsFontStyle.Small" parent="TipsFontStyle">
      <item name="android:textSize">10sp</item>
    </style>
</resources>
